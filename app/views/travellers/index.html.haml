#journal-container.span12
   #journal.span11
      %div

%script{:id => 'editPage', :type => 'text/x-handlebars-template'}
   %form.editor.form-horizontal
      %div.control-group
         %label.control-label{:for => 'title'} Title
         %div.controls
            %input{:id => 'title', :type => 'text' }

         %div.control-group
            %label.control-label{:for => 'title'} Story
            %div.controls
               %textarea{:id => 'story', :cols => 50 }

         %div.control-group
            %div.controls
               %input.btn.submit-story{ :type=> 'submit'}

%script{:id => 'frontCover', :type => 'text/x-handlebars-template'}
   %div.hard Journal

%script{:id => 'backCover', :type => 'text/x-handlebars-template'}
   %div.hard

%script{:id => 'cover', :type => 'text/x-handlebars-template'}
   %div.hard


:javascript
   $(document).ready(function() {
      journal = new Journal({id:'journal', pages:1000});
   });

