- model_class = DayEntry
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @day_entry.title
%p
  %strong= model_class.human_attribute_name(:story) + ':'
  %br
  = @day_entry.story
%p
  %strong= model_class.human_attribute_name(:day) + ':'
  %br
  = @day_entry.day

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), day_entries_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_day_entry_path(@day_entry), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), day_entry_path(@day_entry), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
