= form_for @day_entry, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :title, :class => 'control-label'
    .controls
      = f.text_field :title, :class => 'text_field'
  .control-group
    = f.label :story, :class => 'control-label'
    .controls
      = f.text_area :story, :class => 'text_area'
  .control-group
    = f.label :day, :class => 'control-label'
    .controls
      = f.date_select :day, :class => 'date_select'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), day_entries_path, :class => 'btn'
